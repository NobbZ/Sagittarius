!!!
%html
  %head
    %title Sagittarius
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag "vendor/modernizr"
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %div
      %nav.top-bar{role: "navigation"}(data-topbar)
        %section.top-bar-section
          %ul#title-area
            %li.name
              %h1
                = link_to "Sagittarius", new_user_session_url
            %li.toggle-topbar.menu-icon
              %a{"href" => "#"}
                %span Menu
          %ul.right
            - if current_user.nil? then
              %li= link_to "Log In", new_user_session_url
              %li= link_to "Register", new_user_registration_url
            - else
              %li= link_to current_user.email, "#"
              %li= link_to "Log Out", destroy_user_session_url, method: :delete
          %ul.left
            %li= link_to "Example 1", "#"
            %li= link_to "Example 2", "#"

    .row
      .large-3.columns
        %ul.side-nav
          %li= link_to "Example 1", "#"
          %li= link_to "Example 2", "#"
      .large-9.columns
        - if flash[:notice]
          .alert-box.radius.success= flash[:notice]
        - if flash[:alert]
          .alert-box.radius.alert= flash[:alert]

        = yield